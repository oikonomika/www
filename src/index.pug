doctype html
html(lang="ja")
  head
    title 合同会社オイコノミカ
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='合同会社オイコノミカの企業説明サイトです。')

    meta(property='og:image', content='./img/og.png')
    meta(property='og:url', content='https://www.oikonomika.jp')
    meta(property='og:title', content='合同会社オイコノミカ')
    meta(property='og:type', content='website')
    meta(property='og:description', content='合同会社オイコノミカの企業説明サイトです。')

    link(rel='stylesheet', href='//use.fontawesome.com/releases/v5.3.1/css/all.css', integrity='sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU', crossorigin='anonymous')
    link(rel="stylesheet" href="/css/main.css")

    script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/gsap/1.18.0/TweenMax.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/typeit/5.10.7/typeit.min.js')
    script(src='/scripts/main.js')

  body
    header
      nav
        h1: a(href='#', title='合同会社オイコノミカ'): img(src='./img/logomark.png', alt='合同会社オイコノミカ')

        mixin menu_item(href, name)
          li: a(href=href)= name

        ul
          +menu_item('#introduction', '会社紹介')
          +menu_item('#service', 'サービス')
          +menu_item('#about', '企業情報')

    main
      include includes/main.pug

    section#introduction
      h2 会社紹介
      p 「ちいさく改善。お得に解決。」をモットーにお客様の様々なニーズにお応えします。

    section#service
      h2 サービス

      mixin service(icon_class, name, description)
        li.fadein
          div
            i(class=icon_class)
          h4= name
          p!= description

      ul#service-list
        +service('fas fa-code', 'ウェブサイト制作', 'ウェブサイトデザインから保守・運用まで<br>トータルでご提案します。')
        +service('fas fa-desktop', 'ソフトウェア開発', 'ビジネスを最大限まで改善する<br>品質の高いソフトウェアを開発します。')
        +service('far fa-lightbulb', 'コンサルティング', '弊社のナレッジベースを活かし<br>ビジネスモデル・人材育成を提案します。')

    section#about
      h2 企業情報

      #company-profile
        #company-data
          mixin company-data-define(term, definition)
            dt= term
            dd!= definition

          dl
            +company-data-define('社名', '合同会社オイコノミカ')
            +company-data-define('設立', '2018年5月22日')
            +company-data-define('資本金', '500,000円')
            +company-data-define('所在地', '〒467-0062<br>愛知県名古屋市瑞穂区山下通5丁目8<br>アネックス瑞穂305号室')
            +company-data-define('最高経営責任者', '杉江 淳')
            +company-data-define('関連会社', '株式会社 NEXT ARROW')

        #company-history
          mixin timeline_point(date, description)
            .timeline-point.fadein
              h3= date
              p= description

          .timeline
            +timeline_point('2018年5月', '合同会社オイコノミカを設立しました。')
            +timeline_point('2018年7月', '株式会社 NEXT ARROWと業務提携を締結しました。')
  
    footer
      a#return-to-top(href='#')
        i(class='fas fa-caret-up')
