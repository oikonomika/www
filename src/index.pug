doctype html
html(lang="ja")
  head
    title 合同会社オイコノミカ
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='合同会社オイコノミカの企業説明サイトです。')

    meta(property='og:image', content='./img/og.png')
    meta(property='og:url', content='http://www.oikonomika.jp')
    meta(property='og:title', content='合同会社オイコノミカ')
    meta(property='og:type', content='website')
    meta(property='og:description', content='合同会社オイコノミカの企業説明サイトです。')


    link(href='https://fonts.googleapis.com/css?family=Roboto', rel='stylesheet')

    link(rel="stylesheet" href="/css/main.css")

  body
    header
      nav
        h1: a(href='', title='合同会社オイコノミカ'): img(src='./img/logomark.png', alt='合同会社オイコノミカ')

        ul
          li: a(href="#message") Message
          li: a(href="#service") Service
          li: a(href="#about") About

    main

    section#message
      h2 Message
      p 「ちいさく改善。お得に解決。」をモットーにお客様の様々なニーズにお応えします。

    section#service
      h2 Service

      mixin service(icon_class, name, description)
        li
          div(class=icon_class)
          h4= name
          p= description

      ul#service-list
        +service('website-service-icon', 'ウェブサイト制作', 'ウェブサイトデザインから保守・運用までトータルでご提案します。')
        +service('software-service-icon', 'ソフトウェア開発', '業務を最大限まで改善する品質の高いソフトウェアを開発します。')
        +service('consulting-icon', 'コンサルティング', '弊社のナレッジベースを活かしビジネスモデル・人材育成・マーケティングの提案します。')

    section#about
      h2 About

      #company-profile
        #company-data
          dl
            dt 社名
            dd 合同会社オイコノミカ

            dt 設立
            dd 2018年5月22日

            dt 資本金
            dd 500,000円

            dt 所在地
            dd 〒467-0062<br>愛知県名古屋市瑞穂区山下通5丁目8<br>アネックス瑞穂305号室

            dt 最高経営責任者
            dd 杉江 淳

            dt 関連会社
            dd 株式会社 NEXT ARROW

        #company-history

          mixin timeline_point(date, description)
            .timeline-point.right
              h3= date
              p= description

          .timeline
            +timeline_point('2018年5月', '合同会社オイコノミカを設立しました。')
            +timeline_point('2018年7月', '株式会社 NEXT ARROWと業務提携を締結しました。')

    footer
      ul#footer-company-data
        li 合同会社オイコノミカ
        li 〒467-0062 愛知県名古屋市瑞穂区山下通5丁目8 アネックス瑞穂305号室

      ul#footer-menu
        li: a(href="#message") Message
        li: a(href="#service") Service
        li: a(href="#about") About
